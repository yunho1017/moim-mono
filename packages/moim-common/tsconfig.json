{
  "compilerOptions": {
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "incremental": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "inlineSources": true,
    "noImplicitAny": false,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2016",
    "jsx": "preserve",
    "lib": ["es2017", "es2020", "dom", "webworker"],
    "removeComments": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "strict": true,
    "strictFunctionTypes": false,
    "typeRoots": ["src/typings", "node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "BGLevels": ["./src/design-system/BGLevel"],
      "DeCome": ["./src/decome"]
    }
  },
  "include": ["src"]
}
